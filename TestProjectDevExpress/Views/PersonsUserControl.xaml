<UserControl x:Class="TestProjectDevExpress.Views.PersonsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestProjectDevExpress.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--<Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>-->

        <StackPanel Grid.Column="2">
            <Label Content="Id" Grid.Column="1"/>
            <TextBox x:Name="personId" Grid.Row="1" Text="{Binding PersonId}" Width="250px" Height="50px"></TextBox>

            <Label Content="Firstname" Grid.Column="2"/>
            <TextBox x:Name="firstname" Grid.Row="1" Text="{Binding FirstName}" Width="250px" Height="50px"></TextBox>

            <Label Content="Lastname" Grid.Column="3"/>
            <TextBox x:Name="lastname" Grid.Row="1" Text="{Binding LastName}" Width="250px" Height="50px"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
